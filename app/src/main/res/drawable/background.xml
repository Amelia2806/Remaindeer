<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/> <!-- Warna bayangan -->
            <corners android:radius="30dp"/> <!-- Sudut melengkung -->
        </shape>
    </item>

    <!-- Ripple Effect Layer -->
    <item>
        <ripple xmlns:android="http://schemas.android.com/apk/res/android"
            android:color="?android:attr/colorControlHighlight">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/> <!-- Warna latar belakang -->
                    <corners android:radius="30dp"/> <!-- Sudut melengkung -->
                    <stroke android:width="10dp" android:color="@color/white"/> <!-- Border -->
                </shape>
            </item>
        </ripple>
    </item>

</layer-list>
